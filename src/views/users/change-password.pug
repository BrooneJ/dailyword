extends ../base

block content
    if errorMessage 
        span=errorMessage
    form(method="POST") 
        input(placeholder="현재 비밀번호", name="oldpassword", type="password", required)
        input(placeholder="새 비밀번호", name="newpassword", type="password", required)
        input(placeholder="새 비밀번호 확인", name="checknewpassword", type="password", required)
        input(type="submit", value="비밀번호 변경")