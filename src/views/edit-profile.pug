extends base.pug

block content 
    div.editForm
        if isHeroku 
            img.AvatarImg(src=loggedInUser.avatarUrl, width="100", height="100")
        else   
            img.AvatarImg(src="/"+loggedInUser.avatarUrl, width="100", height="100")
        form(method="POST", enctype="multipart/form-data")
            label(for="avatar") Avatar 
            input(type="file", id="avatar", name="avatar", accept="image/*")
            input(placeholder="Username", name="username", value=loggedInUser.username, type="text", required)
            input(placeholder="Email", name="email", value=loggedInUser.email, type="text", required)
            input(type="submit", value="변경")
        div.auth-switch
            span 비밀번호를 변경하시겠습니까?   
            a(href="change-password") 비밀번호 변경 &rarr;