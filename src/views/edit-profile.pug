extends base.pug

block content 
    img(src="/"+loggedInUser.avatarUrl, width="100", height="100")
    form(method="POST", enctype="multipart/form-data")
        label(for="avatar") Avatar 
        input(type="file", id="avatar", name="avatar", accept="image/*")
        input(placeholder="Username", name="username", value=loggedInUser.username, type="text", required)
        input(placeholder="Email", name="email", value=loggedInUser.email, type="text", required)
        input(type="submit", value="변경")
    br
    a(href="change-password") 비밀번호 변경 &rarr;